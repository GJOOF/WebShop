@model List<ProductViewModel>
@{
    ViewData["Title"] = "Catalog";
}

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-4 card shadow">
            <img class="card-img-top" src=@product.ImagePath alt="Изображение товара" />
            <div class="card-body">
                <a class="btn-dark p-2" asp-controller="Home" asp-action="Product" asp-route-id="@product.Id">
                    img src="@product.ImagePath" class="game_img">
                    <h5>@product.Name</h5>
                </a>
                <p>@product.Cost руб</p>
                <a class="btn btn-dark" href="/cart/add?productId=@product.Id" role="button">Добавить в корзину</a>
            </div>  
        </div>
    }
</div>